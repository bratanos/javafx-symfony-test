<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.innertrack.controller.LoginController"
            spacing="12" alignment="CENTER"
            styleClass="login-container, p-3">
<Label text="Login" styleClass="login-title" />
    <TextField fx:id="emailField" promptText="Email" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <Button text="Login" fx:id="loginButton" onAction="#onLoginClicked" styleClass="accent" />
    <Label fx:id="errorLabel" text="" styleClass="text-danger" />
</VBox>
