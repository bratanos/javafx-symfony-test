                    -->
                    <TextField fx:id="tfSearch"
                               promptText="ðŸ” Rechercher par titre, auteur, catÃ©gorie..."
                               styleClass="search-field"
                               HBox.hgrow="ALWAYS"/>
                    <Button text="ðŸ”ƒ Actualiser"
                            onAction="#handleRefresh"
                            styleClass="btn-success"
                            prefHeight="40"/>
                </HBox>

                <!-- Opens the detail panel in blank "new article" mode -->
                <Button text="âž• Nouvel Article"
                        onAction="#handleNewArticle"
                        styleClass="btn-primary"
                        prefWidth="Infinity"
                        prefHeight="40"/>

                <Separator styleClass="separator"/>

                <!--
                    TableView displays the filtered article list.
                    VBox.vgrow="ALWAYS" makes it fill remaining vertical space.
                    Column cells are wired to Article properties via
                    PropertyValueFactory in ArticleController.setupTable().
                -->
                <TableView fx:id="tableArticles"
                           VBox.vgrow="ALWAYS"
                           styleClass="table-view">
                    <columns>
                        <TableColumn fx:id="colTitre"     text="Titre"     prefWidth="160"/>
                        <TableColumn fx:id="colAuteur"    text="Auteur"    prefWidth="110"/>
                        <TableColumn fx:id="colCategorie" text="CatÃ©gorie" prefWidth="110"/>
                        <TableColumn fx:id="colDate"      text="Date"      prefWidth="100"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <!-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
                 RIGHT: Detail panel
                 â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <StackPane HBox.hgrow="ALWAYS">

                <!-- Empty state: shown when no article is selected -->
                <VBox fx:id="emptyState"
                      alignment="CENTER"
                      spacing="16"
                      visible="true"
                      style="-fx-padding: 60;
                             -fx-background-color: #ffffff;
