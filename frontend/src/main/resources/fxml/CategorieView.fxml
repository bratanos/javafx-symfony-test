                </VBox>

                <!-- Detail / edit panel -->
                <ScrollPane fx:id="detailScrollPane"
                            fitToWidth="true"
                            visible="false"
                            style="-fx-background: transparent; -fx-background-color: transparent;">

                    <VBox fx:id="detailView" spacing="15" styleClass="detail-panel">

                        <!-- Article header: title + meta info line -->
                        <VBox spacing="6">
                            <Label fx:id="lblDetailTitle"
                                   text="Titre de l'article"
                                   styleClass="detail-title"/>
                            <Label fx:id="lblDetailMeta"
                                   text="Auteur Â· CatÃ©gorie Â· Date"
                                   style="-fx-font-size: 13px; -fx-text-fill: #605e5c;"/>
                        </VBox>

                        <Separator styleClass="separator"/>

                        <!-- Titre field -->
                        <Label text="Titre de l'article :" styleClass="detail-label"/>
                        <TextField fx:id="tfTitre"
                                   promptText="Ex: Les bienfaits de la mÃ©ditation"
                                   styleClass="text-field"/>

                        <!-- Auteur field -->
                        <Label text="Auteur :" styleClass="detail-label"/>
                        <TextField fx:id="tfAuteur"
                                   promptText="Ex: Dr Sophie Martin"
                                   styleClass="text-field"/>

                        <!-- Date + Category: side by side using HBox -->
                        <HBox spacing="12">
                            <VBox spacing="6" HBox.hgrow="ALWAYS">
                                <Label text="Date de publication :" styleClass="detail-label"/>
                                <DatePicker fx:id="dpDatePublication"
                                            promptText="SÃ©lectionner une date"
                                            maxWidth="Infinity"
                                            styleClass="date-picker"/>
                            </VBox>
