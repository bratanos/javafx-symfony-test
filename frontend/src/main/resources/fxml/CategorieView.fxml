            <VBox fx:id="sidebarVBox" spacing="12" prefWidth="480" styleClass="sidebar">

                <!-- Search field + refresh button side by side -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <!--
                        HBox.hgrow="ALWAYS" makes the search field expand to fill
