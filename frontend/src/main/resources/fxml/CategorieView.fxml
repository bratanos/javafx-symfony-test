                                          promptText="Choisir une catÃ©gorie"
                                          maxWidth="Infinity"
                                          styleClass="combo-box"/>
                            </VBox>
                        </HBox>

                        <!-- Contenu (article body) -->
                        <Label text="Contenu :" styleClass="detail-label"/>
                        <TextArea fx:id="taContenu"
                                  promptText="Ã‰crivez le contenu de votre article ici..."
