<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.innertrack.controller.ForgotPasswordController"
      spacing="30" alignment="TOP_CENTER"
      maxWidth="400">

    <ImageView fitHeight="80" preserveRatio="true">
        <image>
            <Image url="@../images/innertracklogo1.png" />
        </image>
    </ImageView>

    <VBox spacing="8" alignment="CENTER">
        <Label text="Mot de passe oublié" styleClass="title" />
        <Label text="Entrez votre email pour recevoir un code de réinitialisation" styleClass="subtitle" wrapText="true" textAlignment="CENTER" />
    </VBox>

    <VBox spacing="20" alignment="CENTER">
        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Email" styleClass="subtitle" />
            <TextField fx:id="emailField" promptText="exemple@email.com" maxWidth="Infinity" />
        </VBox>

        <Button text="Envoyer le code" onAction="#handleRequestReset" 
                maxWidth="Infinity" styleClass="btn, btn-primary" />
    </VBox>

    <Label fx:id="messageLabel" wrapText="true" textAlignment="CENTER" />

    <Hyperlink text="Retour à la connexion" onAction="#goToLogin" styleClass="text-link" />

</VBox>
