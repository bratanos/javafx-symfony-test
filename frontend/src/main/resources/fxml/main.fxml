<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.innertrack.controller.MainController"
      spacing="30" alignment="CENTER"
      maxWidth="1000">

    <VBox spacing="10" alignment="CENTER">
        <Label text="Bienvenue sur InnerTrack" styleClass="title" style="-fx-font-size: 32px;" />
        <Label text="Votre compagnon de santé mentale au quotidien." styleClass="subtitle" style="-fx-font-size: 18px;" />
    </VBox>

    <HBox spacing="20" alignment="CENTER">
        <VBox spacing="10" styleClass="card" style="-fx-padding: 20; -fx-pref-width: 280;" alignment="TOP_CENTER">
            <Label text="Journaling" styleClass="title" style="-fx-font-size: 18px;" />
            <Label text="Écrivez vos pensées et suivez votre humeur." wrapText="true" textAlignment="CENTER" styleClass="subtitle" />
            <Button text="Commencer" styleClass="btn, btn-primary" />
        </VBox>

        <VBox spacing="10" styleClass="card" style="-fx-padding: 20; -fx-pref-width: 280;" alignment="TOP_CENTER">
            <Label text="Parcours" styleClass="title" style="-fx-font-size: 18px;" />
            <Label text="Découvrez des exercices de méditation." wrapText="true" textAlignment="CENTER" styleClass="subtitle" />
            <Button text="Explorer" styleClass="btn, btn-secondary" />
        </VBox>
        
        <VBox spacing="10" styleClass="card" style="-fx-padding: 20; -fx-pref-width: 280;" alignment="TOP_CENTER">
            <Label text="Spécialistes" styleClass="title" style="-fx-font-size: 18px;" />
            <Label text="Prenez rendez-vous avec nos psychologues." wrapText="true" textAlignment="CENTER" styleClass="subtitle" />
            <Button text="Consulter" styleClass="btn, btn-secondary" />
        </VBox>
    </HBox>

</VBox>
