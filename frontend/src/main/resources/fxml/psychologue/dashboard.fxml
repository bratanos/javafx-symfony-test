<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.paint.ImagePattern?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.innertrack.controller.psychologue.PsychologueDashboardController"
            stylesheets="@../../style/dashboards.css"
            maxHeight="Infinity" maxWidth="Infinity">

    <!-- Sidebar -->
    <left>
        <VBox styleClass="sidebar" prefWidth="250">
            <VBox styleClass="sidebar-logo" alignment="CENTER">
                <ImageView fitWidth="150" preserveRatio="true">
                    <image>
                        <Image url="@../../images/innertracklogo1.png" />
                    </image>
                </ImageView>
            </VBox>

            <VBox styleClass="profile-section">
                <javafx.scene.shape.Circle fx:id="profileCircle" radius="35" styleClass="profile-pic" />
                <Label fx:id="userFullNameLabel" text="Psychologue" styleClass="profile-name" />
            </VBox>

            <Separator opacity="0.1" />

            <VBox spacing="5">
                <Button text="Résumé" styleClass="sidebar-button, sidebar-button-active" maxWidth="Infinity">
                    <graphic>
                        <FontIcon iconLiteral="fas-home" iconSize="18" iconColor="#ffffff" />
                    </graphic>
                </Button>
                <Button text="Mes Patients" styleClass="sidebar-button" maxWidth="Infinity" onAction="#handleViewPatients">
                    <graphic>
                        <FontIcon iconLiteral="fas-user-md" iconSize="18" iconColor="#ffffff" />
                    </graphic>
                </Button>
                <Button text="Agenda" styleClass="sidebar-button" maxWidth="Infinity" onAction="#handleViewAgenda">
                    <graphic>
                        <FontIcon iconLiteral="fas-calendar-alt" iconSize="18" iconColor="#ffffff" />
                    </graphic>
                </Button>
                <Button text="Note &amp; Rapports" styleClass="sidebar-button" maxWidth="Infinity">
                    <graphic>
                        <FontIcon iconLiteral="fas-file-medical-alt" iconSize="18" iconColor="#ffffff" />
                    </graphic>
                </Button>
                <Button text="Profil &amp; Paramètres" onAction="#handleGoToSettings" styleClass="sidebar-button" maxWidth="Infinity">
                    <graphic>
                        <FontIcon iconLiteral="fas-user-cog" iconSize="18" iconColor="#ffffff" />
                    </graphic>
                </Button>
            </VBox>

            <Region VBox.vgrow="ALWAYS" />

            <Button text="Déconnexion" styleClass="sidebar-button" maxWidth="Infinity" onAction="#handleLogout">
                <graphic>
                    <FontIcon iconLiteral="fas-sign-out-alt" iconSize="18" iconColor="#ffffff" />
                </graphic>
            </Button>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
            <VBox spacing="30" styleClass="dashboard-container" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="30" right="40" bottom="30" left="40" />
                </padding>

                <!-- Header -->
                <HBox spacing="20" alignment="CENTER_LEFT">
                    <VBox>
                        <Label fx:id="welcomeLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Bonjour, Dr." />
                        <Label text="Vérifiez vos rendez-vous et le suivi de vos patients." style="-fx-text-fill: #7f8c8d;" />
                    </VBox>
                    <Region HBox.hgrow="ALWAYS" />
                    <Button text="Nouvelle Consultation" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;" />
                </HBox>

                <!-- Stats Cards -->
                <HBox spacing="20">
                    <VBox styleClass="dashboard-card, stat-card" HBox.hgrow="ALWAYS">
                        <FontIcon iconLiteral="fas-users" iconSize="24" iconColor="#1d7bed" />
                        <Label fx:id="totalPatientsLabel" styleClass="stat-value" text="0" />
                        <Label styleClass="stat-label" text="Patients Actifs" />
                    </VBox>
                    <VBox styleClass="dashboard-card, stat-card" HBox.hgrow="ALWAYS">
                        <FontIcon iconLiteral="fas-calendar-check" iconSize="24" iconColor="#27ae60" />
                        <Label fx:id="appointmentsTodayLabel" styleClass="stat-value" text="0" style="-fx-text-fill: #27ae60;" />
                        <Label styleClass="stat-label" text="RDV Aujourd'hui" />
                    </VBox>
                    <VBox styleClass="dashboard-card, stat-card" HBox.hgrow="ALWAYS">
                        <FontIcon iconLiteral="fas-comments" iconSize="24" iconColor="#9b59b6" />
                        <Label fx:id="totalConsultationsLabel" styleClass="stat-value" text="0" style="-fx-text-fill: #9b59b6;" />
                        <Label styleClass="stat-label" text="Consultations Totales" />
                    </VBox>
                </HBox>

                <!-- Agenda Preview (Placeholder) -->
                <VBox styleClass="dashboard-card" spacing="15">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20" />
                    </padding>
                    <Label text="Prochains Rendez-vous" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <Separator />
                    <VBox spacing="10">
                        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: #f9f9f9; -fx-background-radius: 5;">
                            <Label text="14:00" style="-fx-font-weight: bold; -fx-text-fill: #1d7bed;" prefWidth="50" />
                            <Label text="Jean Dupont" style="-fx-font-weight: bold;" />
                            <Label text="Suivi thérapeutique" style="-fx-text-fill: #7f8c8d;" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Button text="Détails" styleClass="sidebar-button" style="-fx-text-fill: #1d7bed; -fx-padding: 5 10;" />
                        </HBox>
                        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: #f9f9f9; -fx-background-radius: 5;">
                            <Label text="15:30" style="-fx-font-weight: bold; -fx-text-fill: #1d7bed;" prefWidth="50" />
                            <Label text="Marie Curie" style="-fx-font-weight: bold;" />
                            <Label text="Première consultation" style="-fx-text-fill: #7f8c8d;" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Button text="Détails" styleClass="sidebar-button" style="-fx-text-fill: #1d7bed; -fx-padding: 5 10;" />
                        </HBox>
                    </VBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
