<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox spacing="30" alignment="TOP_CENTER" styleClass="dashboard-container"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.innertrack.controller.profile.ChangePasswordController"
      stylesheets="@../../style/dashboards.css">
    
    <padding>
        <Insets top="40" right="40" bottom="40" left="40" />
    </padding>

    <!-- Header -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Button onAction="#handleBack" style="-fx-background-color: #f1f1f1; -fx-background-radius: 50; -fx-padding: 8; -fx-cursor: hand;">
            <graphic>
                <FontIcon iconLiteral="fas-arrow-left" iconSize="20" iconColor="#2c3e50" />
            </graphic>
        </Button>
        <VBox>
            <Label text="Changer de mot de passe" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <Label text="Assurez-vous d'utiliser un mot de passe sécurisé." style="-fx-text-fill: #7f8c8d;" />
        </VBox>
    </HBox>

    <!-- Change Password Card -->
    <VBox styleClass="dashboard-card" spacing="25" maxWidth="500">
        <padding>
            <Insets top="40" right="40" bottom="40" left="40" />
        </padding>
        
        <VBox spacing="10">
            <Label text="Mot de passe actuel" styleClass="subtitle" />
            <PasswordField fx:id="currentPasswordField" promptText="••••••••" styleClass="input-field" />
        </VBox>

        <VBox spacing="10">
            <Label text="Nouveau mot de passe" styleClass="subtitle" />
            <PasswordField fx:id="newPasswordField" promptText="••••••••" styleClass="input-field" />
        </VBox>

        <VBox spacing="10">
            <Label text="Confirmer le nouveau mot de passe" styleClass="subtitle" />
            <PasswordField fx:id="confirmPasswordField" promptText="••••••••" styleClass="input-field" />
        </VBox>

        <Label fx:id="messageLabel" wrapText="true" textAlignment="CENTER" maxWidth=" Infinity" />

        <Button text="Mettre à jour le mot de passe" onAction="#handleChangePassword" 
                maxWidth="Infinity" 
                style="-fx-background-color: #1d7bed; -fx-text-fill: white; -fx-padding: 12 0; -fx-background-radius: 8; -fx-font-weight: bold; -fx-font-size: 16px; -fx-cursor: hand;" />
    </VBox>
</VBox>
