<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.innertrack.controller.ResetPasswordController"
      spacing="25" alignment="TOP_CENTER"
      maxWidth="400" stylesheets="@../../style/style.css">

    <ImageView fitHeight="70" preserveRatio="true">
        <image>
            <Image url="@../../Images/innertracklogo1.png" />
        </image>
    </ImageView>

    <VBox spacing="8" alignment="CENTER">
        <Label text="Réinitialiser le mot de passe" styleClass="title" style="-fx-font-size: 24px;" />
        <Label fx:id="subtitleLabel" text="Entrez le code reçu par email" styleClass="subtitle" wrapText="true" textAlignment="CENTER" />
    </VBox>

    <VBox spacing="20" alignment="CENTER">
        <HBox spacing="8" alignment="CENTER">
            <TextField fx:id="code1" styleClass="otp-box" />
            <TextField fx:id="code2" styleClass="otp-box" />
            <TextField fx:id="code3" styleClass="otp-box" />
            <TextField fx:id="code4" styleClass="otp-box" />
            <TextField fx:id="code5" styleClass="otp-box" />
            <TextField fx:id="code6" styleClass="otp-box" />
        </HBox>

        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Nouveau mot de passe" styleClass="subtitle" />
            <PasswordField fx:id="newPasswordField" promptText="••••••••" maxWidth="Infinity" />
            
            <Label text="Confirmer le mot de passe" styleClass="subtitle" />
            <PasswordField fx:id="confirmPasswordField" promptText="••••••••" maxWidth="Infinity" />
        </VBox>

        <Button text="Changer le mot de passe" onAction="#handleResetPassword" 
                maxWidth="Infinity" styleClass="btn, btn-primary" />
    </VBox>

    <Label fx:id="messageLabel" wrapText="true" textAlignment="CENTER" />

    <Hyperlink text="Retour à la connexion" onAction="#goToLogin" styleClass="text-link" />

</VBox>
