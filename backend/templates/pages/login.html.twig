{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
  <div class="min-h-screen bg-gradient-to-br from-cyan-50 via-purple-50 to-emerald-50 flex items-center justify-center p-4">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-xl p-6">

      <!-- LOGO -->
      <div class="mx-auto w-16 h-16 bg-cyan-500 rounded-2xl flex items-center justify-center mb-4">
        <!-- replace with your svg if needed -->
        <img src="/images/inntertracklogo1.png" alt="InnerTrack Logo" class="w-10 h-10 object-contain" />
      </div>

      <h2 class="text-center text-3xl font-bold mb-2">Bienvenue sur InnerTrack</h2>
      <p class="text-center text-sm text-gray-500 mb-6">
        Connectez-vous pour accéder à votre espace bien-être
      </p>

      <!-- FORM -->
      <form method="POST" class="space-y-5">
        <div class="space-y-2">
          <label class="block text-sm font-medium">Email</label>
          <input type="email" name="email" required
                 class="w-full h-11 rounded-md border border-gray-200 px-3 focus:outline-none focus:ring-2 focus:ring-cyan-400" />
        </div>

        <div class="space-y-2">
          <label class="block text-sm font-medium">Mot de passe</label>
          <input type="password" name="password" required
                 class="w-full h-11 rounded-md border border-gray-200 px-3 focus:outline-none focus:ring-2 focus:ring-cyan-400" />
        </div>

        <button type="submit"
                class="w-full h-11 bg-cyan-500 hover:bg-cyan-600 text-white rounded-md">
          Se connecter
        </button>

        <div class="text-center">
          <a href="#" class="text-sm text-cyan-500 hover:underline">Mot de passe oublié ?</a>
        </div>

        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <span class="w-full border-t"></span>
          </div>
          <div class="relative flex justify-center text-xs uppercase">
            <span class="bg-white px-2 text-gray-500">
              Nouveau sur InnerTrack ?
            </span>
          </div>
        </div>

        <button type="button"
                class="w-full h-11 border border-gray-200 rounded-md">
          Créer un compte
        </button>
      </form>
    </div>
  </div>
{% endblock %}
