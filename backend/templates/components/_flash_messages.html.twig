{% for type, messages in app.flashes %}
    {% for message in messages %}
        <div
            class="mb-4 rounded px-4 py-3 text-sm
            {% if type == 'success' %}
                bg-green-100 text-green-800
            {% elseif type == 'error' %}
                bg-red-100 text-red-800
            {% elseif type == 'warning' %}
                bg-yellow-100 text-yellow-800
            {% else %}
                bg-blue-100 text-blue-800
            {% endif %}
            "
        >
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
